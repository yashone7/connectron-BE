{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "no-unused-vars": "warn",
    "semi": ["error", "always"]
  }
}
